<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.layout.AnchorPane?>
<AnchorPane fx:controller="controller.Controller"
            xmlns:fx="http://javafx.com/fxml" prefWidth="1280" prefHeight="720">
    <Canvas fx:id="canvas" width="1280" height="720" onMouseDragged="#draw" visible="true"/>
    <MenuBar fx:id="menuBar" prefWidth="235" onMouseEntered="#menuOpacityFalse" onMouseExited="#menuOpacitytrue"
             style="-fx-opacity: 0.4; -fx-border-color: transparent;" layoutX="500">
        <menus>
            <Menu text="(Draw)">
                <items>
                    <MenuItem text="New" onAction="#clear"/>
                    <SeparatorMenuItem  />
                    <MenuItem text="Save"/>
                </items>
            </Menu>
            <Menu text="Brush">
                <items>
                    <MenuItem text="Pencil"/>
                    <MenuItem text="Bucket"/>
                    <MenuItem text="Erase"/>
                    <SeparatorMenuItem  />
                    <MenuItem text="Square"/>
                    <MenuItem text="Circle" visible="false"/>
                    <MenuItem text="Triangle" visible="false"/>
                </items>
            </Menu>
            <Menu text="Size">
                <items>
                    <MenuItem text="Small" onAction="#setSmall"/>
                    <MenuItem text="Medium" onAction="#setMedium"/>
                    <MenuItem text="Large" onAction="#setLarge"/>
                </items>
            </Menu>
            <Menu text="Color" >
                <items>
                    <MenuItem text="Black"/>
                    <SeparatorMenuItem  />
                    <MenuItem text="Red"/>
                    <MenuItem text="Green"/>
                    <MenuItem text="Blue"/>
                </items>
            </Menu>
        </menus>
        <Menu text="(?)">
            <items>
                <MenuItem text="Help"/>
                <SeparatorMenuItem  />
                <MenuItem text="About"/>
            </items>
        </Menu>
    </MenuBar>
</AnchorPane>
